<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:id="@+id/register_movie_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="registerMovieOnClick"
        android:text="Add Movies to DB"
        />

    <Button
        android:id="@+id/display_movies_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Search for Movies"
        android:onClick="displayMoviesOnClick"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/faviorites_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Search for Actors"
        android:onClick="favioritesOnClick"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/edit_movies_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Additional Feature"
        android:onClick="editMoviesOnClick"
        android:layout_marginBottom="8dp"
        />


</LinearLayout>